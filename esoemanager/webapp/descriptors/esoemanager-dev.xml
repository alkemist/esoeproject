<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<description>ESOE Manager Webapp</description>
	
	<!-- Explicitly set Xerces and Xalan implementations to avoid performance bottlenecks in ESOE -->
	<system-property javax.xml.parsers.DocumentBuilderFactory="org.apache.xerces.jaxp.DocumentBuilderFactoryImpl" />
	<system-property javax.xml.parsers.SAXParserFactory="org.apache.xerces.jaxp.SAXParserFactoryImpl" />
	<system-property javax.xml.transform.TransformerFactory="org.apache.xalan.processor.TransformerFactoryImpl" />
	<system-property javax.xml.validation.SchemaFactory="org.apache.xerces.jaxp.validation.XMLSchemaFactory" />

	<!-- Specify the context configuration path -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/esoeManagerContext.xml</param-value>
	</context-param>

	<!-- Instantiate spring loader listener for servlet 2.4 compliant containers -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<filter>
		<filter-name>spep-filter</filter-name>
		<filter-class>com.qut.middleware.spep.filter.SPEPFilter</filter-class>

		<init-param>
			<param-name>spep-context</param-name>
			<param-value>/spep</param-value>
		</init-param>
	</filter>
 
	<filter-mapping>
		<filter-name>spep-filter</filter-name>
		<url-pattern>/manager/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>click-servlet</servlet-name>
		<servlet-class>net.sf.click.extras.spring.SpringClickServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>click-servlet</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>

	<session-config>
		<session-timeout>180</session-timeout>
	</session-config>
</web-app>