<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

		<!-- Global Configuration -->
		<import resource="globalConfig.xml"/>
		
		<!-- Data Sources -->
		<import resource="dataSources.xml"/>
		
		<!-- SAML2 Resources -->
		<import resource="resources/saml2.xml" />
		
		<!-- Identity Resolver -->
		<import resource="resources/sessions/identityResolver.xml"/>
		
		<!-- Metadata Resolver -->
		<import resource="resources/metadata.xml"/>
		
		<!-- Session Configuration Data -->
		<import resource="resources/sessions/sessionConfigurationData.xml"/>
		
		<!-- Sessions Processor -->
		<import resource="resources/sessions.xml" />
		
		<!-- Policy Decision Point Processor -->
		<import resource="resources/policyDecisionPoint.xml"/>
		
		<!-- SPEP Startup Handler -->
		<import resource="resources/spep/startup.xml"/>
		
		<!-- SPEP Interaction Processor -->
		<import resource="resources/spep.xml"/>
		
		<!-- Authentication Processor -->
		<import resource="resources/authentication.xml" />
		
		<!-- Delegated Authentication Processor -->
		<import resource="resources/delegatedAuthentication.xml" />
		
		<!-- SAML SSO Authentication Authority Processor -->
		<import resource="resources/sso.xml"/>
		
		<!-- SSO Logout Failures and monitoring resources -->
		<import resource="resources/logout.xml" />
		
		<!-- Attribute Authority Processor -->
		<import resource="resources/attributeAuthority.xml"/>
		
		<!-- WS Implementations -->
		<import resource="resources/webServices.xml"/>
		
</beans>