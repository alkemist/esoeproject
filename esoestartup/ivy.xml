<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd">

	<info organisation="esoeproject" module="esoestartup" revision="${esoe.version}">
		<license name="Apache 2.0"
			url="http://www.apache.org/licenses/LICENSE-2.0" />
		<ivyauthor name="Bradley Beddoes"
			url="http://intient.com/roller/beddoes" />
		<repository name="intient-ivy"
			url="http://ivy.intient.com/repos/" ivys="true" artifacts="true" />
	</info>

	<configurations>
		<conf name="dev" />
				
		<conf name="release" />
		<conf name="release-endorsed" />
		<conf name="release-shared" />
	</configurations>
	
	<publications>
		<artifact name="esoestartup" type="jar" />
	</publications>

	<dependencies>
		<!-- Development release JDK endorsed dependencies (excluded below) -->
	    <dependency org="sun" name="jaxb" rev="latest.integration" conf="release-endorsed->default"/>
	    <dependency org="apache" name="xalan" rev="latest.integration" conf="release-endorsed->default"/>
	    <dependency org="apache" name="xerces" rev="latest.integration" conf="release-endorsed->default"/>
	    
	    <!--  Development release shared dependencies -->
	    <dependency org="apache" name="commons-dbcp" rev="latest.integration" conf="release-shared->default"/>
		<dependency org="apache" name="commons-pool" rev="latest.integration" conf="release-shared->default"/>
		
		<!-- Development release dependencies -->
        <dependency org="apache" name="ibatis" rev="latest.integration" conf="release->default"/> 	
        <dependency org="apache" name="log4j" rev="latest.integration" conf="release->default"/>
        <dependency org="slf4j" name="slf4j" rev="latest.integration" conf="release->default"/>
        
        <dependency org="bouncycastle" name="provider" rev="latest.integration" conf="release->default"/> 
        
        <dependency org="esoeproject" name="esoemanager" rev="latest.integration" conf="release->release"/>
        <dependency org="esoeproject" name="esoetools" rev="latest.integration" conf="release->release"/>
        <dependency org="esoeproject" name="saml2lib-j" rev="latest.integration" conf="release->release">
        	<exclude org="sun" module="jaxb" />
        	<exclude org="apache" module="xalan"/>
        	<exclude org="apache" module="xerces"/>
        </dependency>
         	        
        <dependency org="sourceforge" name="click" rev="latest.integration" conf="release->default"/>	
        
        <dependency org="spring" name="core" rev="latest.integration" conf="release->default"/>
        <dependency org="spring" name="dao" rev="latest.integration" conf="release->default"/>
        <dependency org="spring" name="ibatis" rev="latest.integration" conf="release->default"/>
        <dependency org="spring" name="jdbc" rev="latest.integration" conf="release->default"/>	
        
        <!-- Development dependencies -->
        <dependency org="apache" name="commons-dbcp" rev="latest.integration" conf="dev->default"/>
        <dependency org="apache" name="commons-pool" rev="latest.integration" conf="dev->default"/>
        <dependency org="apache" name="ibatis" rev="latest.integration" conf="dev->default"/> 	
        <dependency org="apache" name="log4j" rev="latest.integration" conf="dev->default"/>
        <dependency org="slf4j" name="slf4j" rev="latest.integration" conf="dev->default"/>
        <dependency org="apache" name="servlet" rev="latest.integration" conf="dev->default"/> 	
        
        <dependency org="bouncycastle" name="provider" rev="latest.integration" conf="dev->default"/> 
        
        <dependency org="esoeproject" name="esoemanager" rev="latest.integration" conf="dev->dev"/>
        <dependency org="esoeproject" name="esoetools" rev="latest.integration" conf="dev->dev"/>
        <dependency org="esoeproject" name="saml2lib-j" rev="latest.integration" conf="dev->dev"/>
        	        
        <dependency org="sourceforge" name="click" rev="latest.integration" conf="dev->default"/>	
        
        <dependency org="spring" name="core" rev="latest.integration" conf="dev->default"/>
        <dependency org="spring" name="dao" rev="latest.integration" conf="dev->default"/>
        <dependency org="spring" name="ibatis" rev="latest.integration" conf="dev->default"/>
        <dependency org="spring" name="jdbc" rev="latest.integration" conf="dev->default"/>	
        
	</dependencies>

</ivy-module>