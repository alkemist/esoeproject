<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<description>ESOE Startup Webapp</description>

	<!-- Specify the context configuration path -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/esoeStartupContext.xml</param-value>
	</context-param>

	<!-- Instantiate spring loader listener for servlet 2.4 compliant containers -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
		
	<servlet>
       <servlet-name>click-servlet</servlet-name>
       <servlet-class>net.sf.click.extras.spring.SpringClickServlet</servlet-class>
       <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
       <servlet-name>click-servlet</servlet-name>
       <url-pattern>*.htm</url-pattern>
    </servlet-mapping>

	<session-config>
		<session-timeout>180</session-timeout>
	</session-config>
</web-app>