<project name="esoe-env" xmlns:ivy="antlib:org.apache.ivy.ant">

	<target name="setup" depends="clean"
		description="Creates base directories">
		<mkdir dir="${output.build}" />
		<mkdir dir="${output}" />
		<mkdir dir="${artifacts}" />
	</target>

	<target name="clean" description="Removes base directories">
		<delete dir="${output.build}" />
		<delete dir="${output}" />
	</target>
	
</project>