<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd">

	<info organisation="esoeproject" module="spep-jvm14" revision="${esoe.version}">
		<license name="Apache 2.0"
			url="http://www.apache.org/licenses/LICENSE-2.0" />
		<ivyauthor name="Bradley Beddoes"
			url="http://intient.com/roller/beddoes" />
		<repository name="intient-ivy"
			url="http://ivy.intient.com/repos/" ivys="true" artifacts="true" />
	</info>

	<configurations>
		<conf name="dev" />
		
		<conf name="release" />
		<conf name="release-shared" />
		<conf name="release-endorsed" />
	</configurations>

	<dependencies>
		<!-- Development release JDK endorsed dependencies (excluded below) -->
	    <dependency org="apache" name="xalan" rev="latest.integration" conf="release-endorsed->default"/>
	    <dependency org="apache" name="xerces" rev="latest.integration" conf="release-endorsed->default"/>
	    <dependency org="retrotranslator" name="retrotranslator" rev="latest.integration" conf="release-endorsed->default"/>
		
		<!-- Development release dependencies -->
        <dependency org="apache" name="axis2" rev="latest.integration" conf="release->default"/>
        <dependency org="apache" name="commons-collections" rev="latest.integration" conf="release->default"/>
        <dependency org="apache" name="commons-lang" rev="latest.integration" conf="release->default"/>
        <dependency org="apache" name="log4j" rev="latest.integration" conf="release->default"/>
        <dependency org="slf4j" name="slf4j" rev="latest.integration" conf="release->default"/>
        <dependency org="apache" name="xmlsec" rev="latest.integration" conf="release->default"/>
        
        <!-- Development dependencies -->
        <dependency org="apache" name="axis2" rev="latest.integration" conf="dev->default"/>
        <dependency org="apache" name="commons-lang" rev="latest.integration" conf="dev->default"/>
        <dependency org="apache" name="log4j" rev="latest.integration" conf="dev->default"/>
        <dependency org="apache" name="servlet" rev="latest.integration" conf="dev->default"/> 
        <dependency org="apache" name="xerces" rev="latest.integration" conf="dev->default"/> 
        <dependency org="apache" name="xmlsec" rev="latest.integration" conf="dev->default"/>
        
        <dependency org="easymock" name="junit" rev="latest.integration" conf="dev->default"/>
        
        <dependency org="slf4j" name="slf4j" rev="latest.integration" conf="dev->default"/> 
                
        <dependency org="sun" name="fastinfoset" rev="latest.integration" conf="dev->default"/>
         <dependency org="sun" name="jaxb" rev="latest.integration" conf="dev->default"/>
         	 	
	</dependencies>

</ivy-module>