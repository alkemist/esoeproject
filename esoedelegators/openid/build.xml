<?xml version="1.0" encoding="UTF-8"?>

<project name="esoedelegator-openid" xmlns:ivy="antlib:org.apache.ivy.ant">

	<import file="${esoebuild}/esoe.xml" />
	
	<target name="release" depends="war" description="Builds a gzipped tar for release of the delegator">
		<copy file="${output}/${output.war}" todir="${output}/${output.tar}" />
		<copy file="${annotatedconfig}" todir="${output}/${output.tar}" />
		<copy file="${output}/${output.jar.installer}.jar" todir="${output}/${output.tar}" />
		
		<mkdir dir="${output}/${output.tar}/lib" />
		<copy file="${artifacts.compile}/esoecrypto.jar" todir="${output}/${output.tar}/lib" />
		<copy file="${artifacts.compile}/esoetools.jar" todir="${output}/${output.tar}/lib" />
		<copy file="${artifacts.compile}/saml2lib-j.jar" todir="${output}/${output.tar}/lib" />
		<copy file="${artifacts.compile}/slf4j-api.jar" todir="${output}/${output.tar}/lib" />
		<copy file="${artifacts.compile}/slf4j-log4j12.jar" todir="${output}/${output.tar}/lib" />
		<copy file="${artifacts.compile}/log4j.jar" todir="${output}/${output.tar}/lib" />
		<copy file="${artifacts.compile}/commons-codec.jar" todir="${output}/${output.tar}/lib" />
		<copy file="${artifacts.compile}/bcprov.jar" todir="${output}/${output.tar}/lib" />
		<copy file="${artifacts.compile}/click.jar" todir="${output}/${output.tar}/lib" />
		
		<tar destfile="${output}/${output.tar}.tar.gz" basedir="${output}/${output.tar}" compression="gzip" />
	</target>

	<target name="war" depends="jar" description="Assembles ESOE development war">
		<war destfile="${output}/${output.war}" webxml="${war.descriptor}">
			<webinf dir="${webapp.spring.resources}">
				<include name="**/*.xml" />
				<include name="**/*.config" />
				<include name="**/*.conf" />
				<include name="**/*.keytab" />
			</webinf>

			<classes dir="${webapp.classes}" />

			<lib file="${output}/${output.jar}.jar" />
			<lib dir="${artifacts.runtime}" />

			<fileset dir="${webapp.content}" />
		</war>
	</target>

	<target name="jar" depends="esoe-build.jar" description="Assembles ESOE development jar">
		<jar destfile="${output}/${output.jar.installer}.jar" manifest="${output.manifest.installer}">
			<fileset dir="${src.installer}">
				<include name="**/*.properties" />
				<include name="**/*.xml" />
				<include name="**/*.html" />
			</fileset>
			<fileset dir="${output.build.installer}">
				<include name="**/*" />
			</fileset>
		</jar>
	</target>

	<target name="build" depends="esoe-build.build" description="Compiles ESOE code base">
		<javac destdir="${output.build.installer}" srcdir="${src.installer}" debug="true" debuglevel="lines,vars,source">
			<classpath>
				<fileset dir="${artifacts.provided}">
					<include name="*.jar" />
				</fileset>
				<fileset dir="${artifacts.compile}">
					<include name="*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

</project>