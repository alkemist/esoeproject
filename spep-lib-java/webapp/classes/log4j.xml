<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true">

	<root>
		<level value="debug" />
		<appender-ref ref="spep-support-logger" />
	</root>

	<logger name="com.qut.middleware.spep">
		<level value="INSANE#com.qut.middleware.spep.log4j.InsaneLogLevel" />
		<appender-ref ref="spep-logger" />
		<appender-ref ref="spep-authn" />
		<appender-ref ref="spep-authz" />
	</logger>

	<logger name="com.qut.middleware.saml2">
		<level value="DEBUG" />
		<appender-ref ref="spep-saml2-logger" />
	</logger>

	<appender name="spep-support-logger" class="org.apache.log4j.FileAppender">
		<param name="File" value="logs/spep-support.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %c - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="FATAL" />
			<param name="LevelMin" value="ERROR" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
	</appender>

	<appender name="spep-logger" class="org.apache.log4j.FileAppender">
		<param name="Append" value="false" />
		<param name="File" value="logs/spep-core.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %c - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="FATAL" />
			<param name="LevelMin" value="INSANE#com.qut.middleware.spep.reporting.handler.log4j.InsaneLogLevel" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
	</appender>

	<appender name="spep-authn" class="org.apache.log4j.FileAppender">
		<param name="Append" value="false" />
		<param name="File" value="logs/spep-authn.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %c - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="AUTHN#com.qut.middleware.spep.log4j.AuthnLogLevel" />
			<param name="LevelMin" value="AUTHN#com.qut.middleware.spep.log4j.AuthnLogLevel" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
	</appender>

	<appender name="spep-authz" class="org.apache.log4j.FileAppender">
		<param name="Append" value="false" />
		<param name="File" value="logs/spep-authz.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %c - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="AUTHZ#com.qut.middleware.spep.log4j.AuthzLogLevel" />
			<param name="LevelMin" value="AUTHZ#com.qut.middleware.spep.log4j.AuthzLogLevel" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
	</appender>

	<appender name="spep-saml2-logger" class="org.apache.log4j.FileAppender">
		<param name="Append" value="false" />
		<param name="File" value="logs/error.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %c - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="FATAL" />
			<param name="LevelMin" value="DEBUG" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
	</appender>

</log4j:configuration>